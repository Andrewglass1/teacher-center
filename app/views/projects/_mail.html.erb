<div>
  <%= link_to "Generate a Letter", "#", :class =>"task-button", :id => "mail-doer", :href =>"#letterModal", :"data-toggle" => "modal" %>
</div>

<div class="modal hide" id="letterModal">
  <div class="modal-header">
    <h3>Customize the text below to generate your letter</h3>
  </div>
  <div class="modal-body">
    <%= form_tag letter_path, :method=>'post', id: "letter_form", :target =>'_blank' do %>
        <p><%= text_area_tag "salutation", "Dear Friend,", :size => "20x1"  %></p>
        <p><%= text_area_tag "copy", "#{pt.letter_copy}", :size => "65x10" %></p>
        <p><%= text_area_tag "closing", "Best,", :size => "20x1" %></p>
        <p><%= text_area_tag "signed", "Your Name", :size => "20x1"  %></p>
        <p><%= hidden_field_tag "image", pt.project.image_url %></p>
        <p><%= hidden_field_tag "short_url", pt.short_url %></p>
  </div>
  <div class="modal-footer">
      <%= submit_tag 'Submit', value: "Create a Letter!", :class =>"task-button doer letter-gen", :id=>"#{pt.id}" %>
      <% end %>
  </div>
</div>


